#!/usr/bin/env bash
set -e
if [[ ! -d "/home/nadaso8/Source/mlir-sys-nixos.compat" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/nadaso8/Source/mlir-sys-nixos.compat")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/nadaso8/Source/mlir-sys-nixos.compat" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/nadaso8/Source/mlir-sys-nixos.compat/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/nadaso8/Source/mlir-sys-nixos.compat/.envrc" "/home/nadaso8/Source/mlir-sys-nixos.compat/.direnv"/*.rc
